{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2018",
        "moduleResolution": "bundler",
        "lib": ["ESNext", "DOM"],
        "esModuleInterop": true,
        "declaration": true,
        // Do not change or the linking script will stop working
        "outDir": "./dist",
        "sourceMap": true,
        "newLine": "LF",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "incremental": true,
        "strict": true,
        "downlevelIteration": true,
        "jsx": "react-jsx",
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}
